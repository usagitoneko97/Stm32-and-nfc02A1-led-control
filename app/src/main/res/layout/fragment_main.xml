<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="usagitoneko.nekof.MainActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id = "@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

        <TextView
            android:text="Please place your phone near the tag to get current status."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:id="@+id/nfc_result"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <Switch
            android:text="LED2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/led2"
            android:checked="false"
            android:layout_marginTop="71dp"
            android:layout_below="@+id/nfc_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Switch
            android:text="Green Led"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/led2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/led_green" />

        <Switch
            android:text="Blue Led"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/led_green"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/led_blue" />

        <Switch
            android:text="Orange Led"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/led_blue"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/led_orange" />

        <Button
            android:text="SET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/set_led2"
            android:elevation="0dp"
            android:layout_below="@+id/led_orange"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

        <usagitoneko.nekof.Croller
            android:id="@+id/croller"
            app:back_circle_color="#EDEDED"
            app:indicator_color="#0B3C49"
            app:indicator_width="10"
            app:is_continuous="true"
            app:label_color="#000000"
            app:main_circle_color="#FFFFFF"
            app:max="1000"
            app:progress_primary_color="#0B3C49"
            app:progress_secondary_color="#EEEEEE"
            app:start_offset="45"
            android:layout_below="@+id/set_led2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:soundEffectsEnabled="true"
            android:clickable="false" />

        <TextView
            android:text="23"
            android:gravity="center"
            android:id="@+id/temperature"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_below="@+id/set_led2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="TextView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/set_led2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="58dp"
            android:id="@+id/temperatureColor" />


    </RelativeLayout>
</ScrollView>


